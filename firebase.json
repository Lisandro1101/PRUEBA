{
  "hosting": [
    {
      "target": "web-publica",
      "public": "vidriera/out",  
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    },
    {
      "target": "app-juego",
      // üêõ CORRECCI√ìN: Apunta al directorio de construcci√≥n del juego.
      "public": "juego/dist",       
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    }
  ],  
  // üêõ CORRECCI√ìN: Se a√±adi√≥ la coma que faltaba aqu√≠.
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "platform": "gcfv1",
      "ignore": [
        "node_modules", ".git", "firebase-debug.log", "firebase-debug.*.log"
      ]
    }
  ]
  
}